<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="donuseiei.test.com.authen.page.EachDash_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_cpudash">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPU"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/text_cpu"/>
            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:id="@+id/graph_cpu" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_memdash">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/text_mem"/>
            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:id="@+id/graph_mem" />
        </LinearLayout>>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_storagedash">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/text_storage"/>
            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:id="@+id/graph_storage" />
        </LinearLayout>>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_netdash">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/text_net"/>
            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:id="@+id/graph_net" />
        </LinearLayout>>
    </LinearLayout>
</ScrollView>